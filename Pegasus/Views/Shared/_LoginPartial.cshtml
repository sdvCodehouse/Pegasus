@using System.Security.Claims


<ul class="navbar-nav">
    @if (User.HasClaim(ClaimTypes.Role, "PegasusUser"))
    {
        <li class="nav-item">
            <partial name="_SettingsIcon"/>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-page="" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>
