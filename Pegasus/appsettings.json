{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "PegasusSettings": {
    "taskFilterId": 1,
    "cookieExpiryDays": 30
  },
  "Cache": {
    "TaskFilters": {
      "ExpiryDays": "1"
    }
  },
  "apiRoot": "https://pegasus2api.local",
  "Token": {
    "Issuer": "https://pegasus2api.local",
    "Audience": "https://pegasus2.local",
    "SigningKey": "MySecretKeyIsSecretSoDoNotTell",
    "ExpiryInMinutes": "720"
  },
  "Pagination": {
    "PageSize": 15,
    "PaginationEnabled": true,
    "CookieExpiryDays": 180,
    "TaskFilterId": 1,
    "ProjectId": 0
  },
  "Cookies": {
    "Default": {
      "ExpiryDays": 30 
    }, 
    "UserSettings": {
      "ExpiryDays": 180
    }
  }
}
